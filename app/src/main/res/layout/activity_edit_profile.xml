<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfileActivity">

    <EditText
        android:id="@+id/edit_profile_name"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/name"
        android:drawablePadding="12dp"
        android:ems="10"
        android:fontFamily="@font/open_sans_semibold"
        android:hint="@string/name"
        android:inputType="textPersonName"
        android:paddingLeft="45dp"
        android:textColorHint="@color/purple"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_profile" />

    <EditText
        android:id="@+id/edit_profile_city"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/city"
        android:ems="10"
        android:fontFamily="@font/open_sans_semibold"
        android:hint="@string/city"
        android:inputType="textPersonName"
        android:paddingLeft="50dp"
        android:textColorHint="@color/purple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_profile_name" />

    <EditText
        android:id="@+id/edit_profile_university"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/university"
        android:ems="10"
        android:fontFamily="@font/open_sans_semibold"
        android:hint="@string/university"
        android:inputType="textPersonName"
        android:paddingLeft="50dp"
        android:textColorHint="@color/purple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_profile_city" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/edit_profile_save_button"
        android:layout_width="281dp"
        android:layout_height="65dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="168dp"
        android:background="@drawable/add_buton"
        android:hint="@string/save"
        android:textColorHint="@color/white"
        android:textSize="44sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_profile_university"
        app:layout_constraintVertical_bias="0.838" />

    <TextView
        android:id="@+id/edit_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="78dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="Edit Profile"
        android:textSize="45sp"
        android:textColor="@color/purple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
