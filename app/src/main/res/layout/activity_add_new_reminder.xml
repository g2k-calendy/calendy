<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/open_sans_bold"
            android:text="New Reminder Entry"
            android:textSize="32sp"
            android:textColor="@color/purple_light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/add_event_calendar_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="@string/reminder_description"
            android:textColor="@color/purple_light"
            android:alpha="0.7"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_event_calendar_spinner" />

        <EditText
            android:id="@+id/add_reminder_description"
            android:layout_width="364dp"
            android:layout_height="127dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/event_description"
            android:ems="10"
            android:fontFamily="@font/open_sans_semibold"
            android:gravity="start"
            android:hint="@string/remind_me_to"
            android:textColorHint="@color/white"
            android:inputType="textPersonName"
            android:paddingLeft="15dp"
            android:paddingTop="12dp"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.51"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <TextView
            android:id="@+id/add_reminder_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="@string/date"
            android:textColor="@color/purple_light"
            android:alpha="0.7"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_reminder_description" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/add_reminder_date_picker_button"
            style="@style/default_button"
            android:layout_width="217dp"
            android:layout_height="52dp"
            android:layout_marginStart="168dp"
            android:layout_marginTop="16dp"
            android:width="200dp"
            android:background="@drawable/date"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_reminder_description" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="226dp"
            android:layout_height="44dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="@string/add_reminder_time_text"
            android:textColor="@color/purple_light"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_reminder_date_picker_button" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/add_reminder_time_picker_button"
            style="@style/default_button"
            android:layout_width="95dp"
            android:layout_height="45dp"
            android:layout_marginStart="292dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/time_picker"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_reminder_date_picker_button" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/add_new_reminder_button"
            style="@style/default_button"
            android:layout_width="250dp"
            android:layout_height="52dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/add_buton"
            android:text="@string/add_button_text"
            android:textSize="32sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.465"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_reminder_time_picker_button"
            app:layout_constraintVertical_bias="0.09" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>