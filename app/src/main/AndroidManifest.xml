<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.g2k.calendy">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.Calendy">
        <activity android:name=".EditProfileActivity"></activity>
        <activity android:name=".AddCalendarActivity" />
        <activity android:name=".activities.ForgotPasswordActivity"></activity>
        <activity android:name=".activities.SignupActivity" />
        <activity android:name=".activities.LoginActivity" />
        <activity android:name=".activities.StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.AddNewGoalActivity" />
        <activity
            android:name=".activities.AddNewReminderActivity"
            android:label="Add New Reminder"
            android:parentActivityName=".activities.MainActivity" />
        <activity android:name=".activities.MainActivity" />
        <activity
            android:name=".activities.AddNewEventActivity"
            android:label="Add New Event"
            android:parentActivityName=".activities.MainActivity" />
    </application>

</manifest>