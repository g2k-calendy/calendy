<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.g2k.calendy">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.Calendy">
        <activity
            android:name=".ui.login.signupPage"
            android:label="@string/title_activity_signup_page"></activity>
        <activity
            android:name=".ui.login.loginPage"
            android:label="@string/title_activity_login_page" />
        <activity android:name=".welcome_page" />
        <activity android:name=".AddNewGoalActivity" />
        <activity
            android:name=".AddNewReminderActivity"
            android:label="Add New Reminder"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddNewEventActivity"
            android:label="Add New Event"
            android:parentActivityName=".MainActivity" />
    </application>

</manifest>